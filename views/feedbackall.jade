extends layout

block content
  #container.all
    #display
      div
        table.table
          thead
            tr
              th Comment
              th Build id
              th Date added
              if (isLogged)
                th User
                th
                th
            tbody
              each item in feedback
                tr(class = (!isLogged) ? '' : (item.severity == 0) ? 'success' : (item.severity) == 2 ? 'info' : (item.severity == 3) ? 'warning' : (item.severity == 4) ? 'error': '')
                  td= item.comment
                  td= item.build_id
                  td= item.date_added
                  if (isLogged)
                    td
                      a(href="/user/" + item.user) #{item.user}
                    td
                      if item.associated_bug
                        abbr(title="Associated bug")
                          a(href="#{item.associated_bug}")
                    td
                      abbr(title="Edit comment")
                        a(href="/feedback/" + item._id + "/edit")
                          i.icon-edit
                    td
                      abbr(title="Delete comment")
                        a(href="/feedback/delete/" + item._id + "/")
                          i.icon-trash
