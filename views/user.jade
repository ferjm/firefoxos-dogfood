extends layout

block content
  #container.all
    #display
      div
        dl.dl-horizontal
          dt= "First name"
          dd #{user.first_name}
          dt= "Last name"
          dd #{user.last_name}
          dt= "Email"
          dd #{user.email}
          dt= "Location"
          if (user.location)
            dd #{user.location}
          else
            dd Undefined
          dt= "Primary phone"
          if (user.primary_phone)
            dd= "Yes"
          else
            dd= "No"
          dt= "Dogfooder SIM"
          if (user.sim)
            dd= "Yes"
          else
            dd= "No"
          dt= "Carrier"
          dd #{user.carrier}
          dt= "Device"
          if (user.device.imei)
            dd #{user.device.imei}
          else
            dd User does not have a device assigned

          if (feedback.length)
            div.accordion#accordion2
              div.accordion-group
                div.accordion-heading
                  a(data-toggle="collapse", data-parent="#accordion2", href="#collapseOne").accordion-toggle Comments
                div.accordion-body(class="collapse")#collapseOne
                  div.accordion-inner
                    table
                      thead
                        tr
                          th Comment
                          th Build id
                          th Date added
                          th
                      tbody
                        each comment in feedback
                          tr
                            td= comment.comment
                            td= comment.build_id
                            td= comment.date_added
                            td
                              abbr(title="Delete comment")
                                a(href="/feedback/delete/" + comment._id + "/")
                                  i.icon-trash
          else
            p No feedback

          if (updates.length)
            div.accordion-group
              div.accordion-heading
                a(data-toggle="collapse", data-parent="#accordion2", href="#collapseTwo").accordion-toggle Updates
              div.accordion-body(class="collapse")#collapseTwo
                div.accordion-inner
                  table
                    thead
                      tr
                        th IP
                        th Channel
                        th From build id
                        th To build id
                        th From version
                        th Date
                        th
                    tbody
                      each update in updates
                        tr
                          td= update.ip
                          td= update.channel
                          td= update.from_build_id
                          td= update.to_build_id
                          td= update.from_version
                          td= update.date_added
                          td
                            abbr(title="Delete update")
                              a(href="")
                                i.icon-trash
          else
            p No updates