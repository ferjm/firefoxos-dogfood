extends layout

block content
  #container
    #display
      form(method="post", action="/device/new")
        | Firefox OS doogfooders device deployment
        div
          p
            label Device's IMEI
            input(type="text", name="imei", placeholder="IMEI", required)
          p
            label Select user
            span(class="small") User not in list? Please go to signup
            select(name="email", placeholder="User", required)
              if (users)
                each user in users
                  option(value=user.email) #{user.email}
          p
            input(type="submit", value="Submit & Deploy")
